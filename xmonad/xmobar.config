Config { 
     iconRoot = "/home/peterbecich/dotfiles/xmonad/icons/"  
   , font =         "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
   , bgColor =      "black"
   , fgColor =      "#646464"
   , position =     Top
   , border =       BottomB
   , borderColor =  "#646464"
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = " %temp% %multicpu% %memory% %swap% %disku% %dynnetwork% %StdinReader%  }{  %KLGB% %date%"
   , lowerOnStart =     False    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = False    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     True   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)
   , commands = 
        [ Run Weather "KLGB" [ "--template", "<fc=#4682B4><tempF></fc>Â°F"
                             ] 36000
        , Run DynNetwork     [ "--template" , "<tx>kB/s|<rx>kB/s"
                               , "--Low"      , "1000"       -- units: B/s
                               , "--High"     , "5000"       -- units: B/s
                               , "--low"      , "darkgreen"
                               , "--normal"   , "darkorange"
                               , "--high"     , "darkred"
                              ] 100

        , Run MultiCpu       [ "--template" , "<autototal>"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 100
        -- memory usage monitor
        , Run Memory         [ "--template" ,"<usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 600
        , Run Swap [
	      	   "--template", "<usedratio>%"
		] 6000
        , Run DiskU [("/", "/:<free>"), ("/home", "/home:<free>")]
          ["-L", "20", "-H", "50", "-m", "1", "-p", "3"]
          6000
        , Run Date           "<fc=#ABABAB>%F (%a) %T</fc>" "date" 10
        --, Run Kbd            [ ("us(dvorak)" , "<fc=#4682B4>DV</fc>")
        --                     , ("us"         , "<fc=#4682B4>US</fc>")
        --                     ]
	, Run Com "temp" [] "temp" 150
        -- ,  Run CoreTemp ["-t", "Temp:<core0>|<core1>C",
        --        "-L", "40", "-H", "60",
        --        "-l", "lightblue", "-n", "gray90", "-h", "red"] 100
	, Run StdinReader		     
        ]
   }
